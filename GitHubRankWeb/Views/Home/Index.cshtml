@{
    ViewData["Title"] = "GitHub Rank";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 jumbotron">
            <h1 class="font-italic font-weight-bold">GitHub Rank</h1>
            <h5 class="font-italic">@ViewData["TotalAccounts"] accounts, @ViewData["TotalRepositories"] repositories in Database!</h5>
            <form action="/account/user" accept-charset="UTP-8" method="get">
                <div class="row">
                    <div class="form-group col-lg-4">
                        <input id="search_user" class="form-control col-lg-8" type="search" name="login" placeholder="Search github username" />
                    </div>
                    <div class="col-lg-1">
                        <input class="btn btn-light" type="submit" value="Search" />
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2><a href="/ranking/star?type=user">Users</a></h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>User</th>
                        <th>Star</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 10; i++)
                    {
                        var rankItem = ((List<RankItem>)ViewData["MostStarUsers"])[i];
                        <tr>
                            <td>@Html.DisplayFor(e => rankItem.Rank)</td>
                            <td>
                                <a href="@rankItem.Reference" style="text-decoration: none">
                                    <img class="avatar_image" src="@rankItem.AvatarUrl" />
                                </a>
                                <a href="@rankItem.Reference">@rankItem.Name</a>
                            </td>
                            <td>@Html.DisplayFor(e => rankItem.Score)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <h2><a href="/ranking/star?type=organization">Organizations</a></h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>User</th>
                        <th>Star</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 10; i++)
                    {
                        var rankItem = ((List<RankItem>)ViewData["MostStarOrganizations"])[i];
