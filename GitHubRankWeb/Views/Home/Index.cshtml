                            <td>@Html.DisplayFor(e => rankItem.Rank)</td>
                            <td>
                                <a href="@rankItem.Reference" style="text-decoration: none">
                                    <img class="avatar_image" src="@rankItem.AvatarUrl" />
                                </a>
                                <a href="@rankItem.Reference">@rankItem.Name</a>
                            </td>
                            <td>@Html.DisplayFor(e => rankItem.Score)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <h2><a href="/ranking/star?type=repository">Repositories</a></h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>User</th>
                        <th>Star</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < 10; i++)
                    {
                        var rankItem = ((List<RankItem>)ViewData["MostStarRepositories"])[i];
